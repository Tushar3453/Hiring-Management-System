generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  STUDENT
  RECRUITER
  ADMIN
}

enum ApplicationStatus {
  APPLIED
  SHORTLISTED
  INTERVIEW
  OFFERED
  HIRED
  REJECTED
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  firstName String?
  lastName  String?

  companyName     String? // For Recruiter
  institutionName String? // For Student

  // Profile Fields
  bio         String?
  location    String?
  website     String?
  linkedin    String?
  github      String? // For Student
  resumeUrl   String? // For Student
  resumeText  String?  @db.Text // Store raw text here to avoid re-parsing
  skills      String[]
  designation String? // For Recruiter

  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  role          Role           @default(STUDENT)
  createdAt     DateTime       @default(now())
  jobs          Job[]          @relation("RecruiterJobs") // for recruiter (RecruiterJobs is the name of the relation)
  apps          Application[] //for student
  notifications Notification[]
}

model Job {
  id          String  @id @default(uuid())
  title       String
  description String
  companyName String
  location    String? @default("Remote")

  minSalary Int?
  maxSalary Int?
  currency  String @default("INR")

  jobType         String  @default("Full Time")
  experienceLevel String?
  isOpen          Boolean @default(true) // True = Visible, False = Hidden       

  requirements String[]
  recruiterId  String
  recruiter    User          @relation("RecruiterJobs", fields: [recruiterId], references: [id])
  apps         Application[]
  createdAt    DateTime      @default(now())
}

model Application {
  id            String            @id @default(uuid())
  status        ApplicationStatus @default(APPLIED)
  offerSalary   String?
  joiningDate   String?
  offerNote     String?
  studentId     String
  student       User              @relation(fields: [studentId], references: [id])
  jobId         String
  job           Job               @relation(fields: [jobId], references: [id])
  resumeUrl     String // Mandatory for application (Snapshot)
  atsScore      Int? // 0 - 100
  missingSkills String[] // List of missing keyword
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model Notification {
  id          String   @id @default(uuid()) 
  
  recipientId String   
  recipient   User     @relation(fields: [recipientId], references: [id])
  
  message     String
  type        String   @default("info")
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}
